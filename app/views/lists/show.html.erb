<div class="text-center m-3 align-items-center justify-items-center">
  <h2><%= @list.name %></h2>

  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <div class="card p-3 bg-dark text-white" style="width: 18rem;">
        <span><i class="fas fa-film"></i> <%= bookmark.movie.title %></span>
        <h6 class="mt-3">Bookmark comments:</h6>
        <p><%= bookmark.comment %>
          <%= link_to bookmark_path(bookmark),
          method: :delete,
          data: { confirm: "Are you sure?" } do  %>
          <i class="fas fa-dumpster"></i>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to 'Add a new bookmark comment', new_list_bookmark_path(@list), class:"btn btn-outline-dark mt-3"  %>
  <%= link_to 'Back to list', lists_path, class:"btn btn-outline-dark mt-3"  %>
</div>
