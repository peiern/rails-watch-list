<div>
  <h1>Your lists</h1>
    <div class="cards">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.card_photo.key, height: 300, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
  </div>
  <%= link_to 'Create new list' , new_list_path, class:"btn btn-outline-dark mt-3" %>
  <%= link_to 'Delete a bookmark comment' , bookmarks_path, class:"btn btn-outline-dark mt-3" %>
  <%= link_to 'Back to home' , movies_path, class:"btn btn-outline-dark mt-3" %>
</div>
